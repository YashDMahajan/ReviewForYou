        <div class="card">
            <div class="card-body">
    
              <div class="form-group">
                <h5 class="card-title">Enter the Amazon ID of product</h5>
                <input type="text" name="code" class="form-control input-text" id="addTitle" aria-describedby="emailHelp" placeholder="ASIN" required>
              </div>
              <br>
              <button class="btn btn-outline-info review-button" type="submit"><i class="fas fa-angle-right"></i> Show Reviews</button>
            </div>
        </div>
    </div>
    
    
  </form>
